@model Chushka.ViewModels.ProductsDetailsViewModel

<h1 class="text-center">@Model.Name</h1>
<hr class="hr-2 bg-dark"/>
<div class="product-type-holder half-width mx-auto d-flex justify-content-between">
    <h3 class="text-center">Type: @Model.Type</h3>
    <h3 class="text-center">Price: $@Model.Price</h3>
</div>
<hr class="hr-2 bg-dark"/>
<h3 class="text-center">Description</h3>
<div class="product-description-holder">
    <p class="text-center mt-4">
        @Model.Description
    </p>
</div>
<hr class="hr-2 bg-dark"/>
<h3 class="text-center">Actions</h3>
<div class="product-action-holder mt-4 d-flex justify-content-around">
    @if (User.IsInRole("Admin"))
    {
        <div class="row">
            <div class="mt-4 d-flex justify-content-around col-4">
                <a class="btn chushka-bg-color text-white" asp-controller="Orders" asp-action="Create" asp-route-id="@Model.Id">Order</a>
            </div>
            <div class="mt-4 d-flex justify-content-around col-4">
                <a class="btn chushka-bg-color text-white" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            </div>
            <div class="mt-4 d-flex justify-content-around col-4">
                <a class="btn chushka-bg-color text-white" asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
            </div>
        </div>
    }
    else
    {
        <div class="mt-4 d-flex justify-content-around">
            <a class="btn chushka-bg-color text-white" asp-controller="Orders" asp-action="Create" asp-route-id="@Model.Id">Order</a>
        </div>
    }
</div>