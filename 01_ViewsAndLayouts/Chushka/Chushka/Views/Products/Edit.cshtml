@model Chushka.ViewModels.ProductsDetailsViewModel

<h1 class="text-center">Edit Product</h1>
<hr class="hr-2 bg-dark" />
<form class="mx-auto half-width" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" placeholder="Name...">
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" placeholder="Price...">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" placeholder="Description...">
    </div>
    <h4 class="text-center">Product Type</h4>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="row mt-4">
        <div class="col">
            <input type="radio" id="food" value="Food" asp-for="Type">
            <label for="food">Food</label>
        </div>
        <div class="col">
            <input type="radio" id="domestic" value="Domestic" asp-for="Type">
            <label for="domestic">Domestic</label>
        </div>
        <div class="col">
            <input type="radio" id="health" value="Health" asp-for="Type">
            <label for="health">Health</label>
        </div>
        <div class="col">
            <input type="radio" id="cosmetic" value="Cosmetic" asp-for="Type">
            <label for="cosmetic">Cosmetic</label>
        </div>
        <div class="col">
            <input type="radio" id="other" value="Other" asp-for="Type">
            <label for="other">Other</label>
        </div>
    </div>
    <hr class="hr-2 bg-dark half-width mt-4" />
    <div class="button-holder mt-2 d-flex w-25 mx-auto justify-content-between">
        <button type="submit" class="btn chushka-bg-color">Edit</button>
        <button type="submit" class="btn chushka-bg-color" asp-controller="Home" asp-action="Index">Cancel</button>
    </div>
</form>