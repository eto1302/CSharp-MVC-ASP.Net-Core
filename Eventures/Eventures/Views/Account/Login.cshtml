@model Eventures.ViewModels.LoginViewModel
@{

}

<h1 class="text-center">Login</h1>
<hr class="qt-width eventures-bg-color hr-2"/>
<form class="mx-auto qt-width" method="post" asp-controller="Account" asp-action="Login">
    <div class="form-group text-center font-weight-bold">
        <label asp-for="Username">Username</label>
        <input type="text" asp-for="Username" class="form-control" placeholder="Username">
    </div>
    <div class="form-group text-center font-weight-bold">
        <label asp-for="Password">Password</label>
        <input type="password" asp-for="Password" class="form-control" placeholder="Password">
    </div>
    <hr class="eventures-bg-color hr-2" />
    <div class="form-group text-center ">
        <div class="checkbox">
            <label asp-for="RememberMe">Remember Me?</label>
            <input asp-for="RememberMe" />
        </div>
    </div>
    <hr class="eventures-bg-color hr-2" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color">Login</button>
    </div>
    <div  class="text-center">
        <h10><a class="nav-link-white text-primary text-center" asp-controller="Home" asp-action="Index">Forgot your password?</a></h10>
    </div>
    <div class =" text-center">
        <h10><a class="nav-link-white text-primary text-center" asp-controller="Account" asp-action="Register">Register as a new user</a></h10>
    </div>
</form>   
