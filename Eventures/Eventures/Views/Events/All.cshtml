@using Eventures.ViewModels
@model List<Event>
@{

}
<h1 class="text-center">All Events</h1>
<hr class="eventures-bg-color hr-2 w-75" />
<table class="table w-75 mx-auto table-hover border-top-0">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Start</th>
            <th scope="col">End</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>

        @for (int i = 0; i < @Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Start.ToString("dd-MMM-yy hh-mm-ss")</td>
                <td>@Model[i].End.ToString("dd-MMM-yy hh-mm-ss")</td>
                <td>
                    
                    @await Html.PartialAsync("_OrderEventPartial", new OrderEventViewModel()
                    {
                        EventId = @Model[i].Id
                    })
                    
                </td>
            </tr>
        }
    </tbody>
</table>
<hr class="eventures-bg-color hr-2 w-75" />

