@model Eventures.ViewModels.CreateEventsViewModel

<h1 class="text-center">Create Event</h1>
<hr class="half-width eventures-bg-color hr-2" />
<form class="mx-auto half-width" method="post" asp-controller="Events" asp-action="Create">
    <div class="row mx-auto">
        <div class="form-group col-6 font-weight-bold text-center">
            <label asp-for="Name">Name</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group col-6  font-weight-bold text-center">
            <label asp-for="Place">Place</label>
            <input type="text" asp-for="Place" class="form-control" placeholder="Place">
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>
    <hr class="eventures-bg-color hr-2" />
    <div class="row mx-auto">
        <div class="form-group col-6  font-weight-bold text-center">
            <label asp-for="Start">Start</label>
            <input type="date" asp-for="Start" class="form-control" placeholder="Start">
            <span asp-validation-for="Start" class="text-danger"></span>
        </div>
        <div class="form-group col-6  font-weight-bold text-center">
            <label asp-for="End">End</label>
            <input type="date" asp-for="End" class="form-control" placeholder="End">
            <span asp-validation-for="End" class="text-danger"></span>
        </div>
    </div>
    <hr class="eventures-bg-color hr-2" />
    <div class="row mx-auto">
        <div class="form-group text-center font-weight-bold col-6 ">
            <label asp-for="TotalTickets">Total Tickets</label>
            <input type="number" asp-for="TotalTickets" class="form-control" min="1" placeholder="Total Tickets">
            <span asp-validation-for="TotalTickets" class="text-danger"></span>
        </div>
        <div class="form-group text-center font-weight-bold col-6 ">
            <label asp-for="PricePerTicket">Price Per Ticket</label>
            <input input type="number" step="0.01" asp-for="PricePerTicket" class="form-control" min="0" placeholder="Price Per Ticket">
            <span asp-validation-for="PricePerTicket" class="text-danger"></span>
        </div>
    </div>
    <hr class="eventures-bg-color hr-2" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn eventures-bg-color">Create Event</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}