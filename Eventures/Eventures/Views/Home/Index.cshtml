
@if (!User.Identity.IsAuthenticated)
{
    <div class="jumbotron mt-3 eventures-bg-color">
        <h1>Eventures - The best ticket service in the world</h1>
        <hr class="bg-dark hr-2" />
        <h3><a class="nav-link-white text-primary" asp-area="Identity" asp-page="/Account/Login">Login</a> to start "eventing".</h3>
        <h3><a class="nav-link-white text-primary" asp-area="Identity" asp-page="/Account/Register">Register</a> if you don't have an account.</h3>
    </div>
}

@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <div class="jumbotron mt-3 eventures-bg-color text-center">
            <h1>Welcome, Administrator - Admin!</h1>
            <hr class="hr-2" />
            <h3 style="color: grey">Enjoy your work.</h3>
        </div>
    }
    else if (User.IsInRole("User"))
    {
        <div class="jumbotron mt-3 eventures-bg-color text-center">
            <h1>Welcome, @User.Identity.Name!</h1>
            <hr class="hr-2" />
            <h3 style="color: grey">Eventures wishes you an exciting experience</h3>
        </div>
    }
}