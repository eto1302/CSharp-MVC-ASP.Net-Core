@{
    var user = User;
}

@if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
{

    <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link  font-weight-bold" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item dropdown">
                <a class="dropdown-toggle font-weight-bold nav-link" data-toggle="dropdown" href="#">
                    Events
                </a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Events" asp-action="All">All Events</a></li>
                    <li><a asp-controller="Events" asp-action="MyEvents">My Events</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a class="nav-link font-weight-bold">Hello @user.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link font-weight-bold" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    </ul>
}
else if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link  font-weight-bold" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item dropdown">
                <a class="dropdown-toggle font-weight-bold nav-link" data-toggle="dropdown" href="#">
                    Events
                </a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Events" asp-action="All">All Events</a></li>
                    <li><a asp-controller="Events" asp-action="MyEvents">My Events</a></li>
                    <li><a asp-controller="Events" asp-action="Create">Create Event</a></li>
                </ul>
            </li>
            <li class="nav-item dropdown">
                <a class="dropdown-toggle font-weight-bold nav-link" data-toggle="dropdown" href="#">
                    Orders
                </a>
                <ul class="dropdown-menu">
                    <li><a asp-controller="Orders" asp-action="All">All Orders</a></li>
                </ul>
            </li>
        </ul>
    </div>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a class="nav-link font-weight-bold">Hello Admin!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link font-weight-bold" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    </ul>
}
else
{
    <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link font-weight-bold" asp-controller="Home" asp-action="Index">Home</a>
            </li>
        </ul>

    </div>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a class="nav-link font-weight-bold" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link font-weight-bold" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    </ul>
}