@model Eventures.Web.Models.OrderCreateBindingModel


<form asp-controller="Events" asp-action="Order" method="post" class="form-inline">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group mx-sm-2 mb-2">
        <label asp-for="@Model.TicketsCount" class="font-weight-bold mx-sm-2">Tickets</label>
        <input asp-for="@Model.TicketsCount" class="form-control" placeholder="e.g. 1">
    </div>
    <button type="submit" class="btn eventures-bg-color mb-2">Order</button>
    <input type="hidden" asp-for="EventId" value="@Model.EventId"/>
</form>